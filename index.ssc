	<link rel="stylesheet" type="text/css" href="//assets.nodehost.ca/css/master.css" media="none" onload="if(media!='all')media='all'">
	<style>
		body{
			background:#f1f1f1;
		}
		input, input[type="text"], input[type="password"] {
			max-width:120px;
			border:1px solid #555555;
